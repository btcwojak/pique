<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background_solid"
    android:orientation="vertical"
    android:padding="18dp">

    <TextView
        android:id="@+id/tvBlockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:text="Block #780,000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvGeneralInfo"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/open_sans_light"
        android:text="tvTimestamp, tvAveRate, tvTxCount, tvSize"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Total block reward"/>

    <TextView
        android:id="@+id/tvReward"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_width="match_parent"
        android:text="tvReward"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Total subsidy"/>

    <TextView
        android:id="@+id/tvSubsidy"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_width="match_parent"
        android:text="tvSubsidy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Total fees"/>

    <TextView
        android:id="@+id/tvFees"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_width="match_parent"
        android:text="tvFees"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Average transaction fee"/>

    <TextView
        android:id="@+id/tvAveFee"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_width="match_parent"
        android:text="tvAveFee"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Fee rate range"/>

    <TextView
        android:id="@+id/tvFeeRange"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_width="match_parent"
        android:text="tvLowFee - tvHighFee"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Blockhash"/>

    <TextView
        android:id="@+id/tvId"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:fontFamily="@font/open_sans_light"
        android:text="tvId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:text="Previous blockhash"/>

    <TextView
        android:id="@+id/tvPrevHash"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_light"
        android:layout_width="match_parent"
        android:text="tvPrevHash"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/open_sans_light"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:padding="10dp"
            android:text="Done"
            android:textColor="#673AB7" />

    </LinearLayout>

</LinearLayout>